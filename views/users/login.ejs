<% layout('layouts/boilerplate') %>
<h1>Log in</h1>
<form action="/login" method="POST" class="validated-form" novalidate>
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input
      type="text"
      name="username"
      id="username"
      class="form-control"
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input
      type="password"
      name="password"
      id="password"
      class="form-control"
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>

  <div class="mb-3"><button class="btn btn-success">Submit</button></div>
</form>
<a class="btn btn-outline-secondary" href="/register">Register as a new user</a>
