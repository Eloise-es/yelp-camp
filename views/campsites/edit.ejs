<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campsite</h1>
  <di class="col-6 offset-3">
    <form action="/campsites/<%= campsite.id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Name</label>
        <input
          type="text"
          name="campsite[title]"
          id="title"
          class="form-control"
          value="<%= campsite.title %>"
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="campsite[location]"
          id="location"
          class="form-control"
          value="<%= campsite.location %>"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Link to image</label>
        <input
          type="text"
          name="campsite[img]"
          id="img"
          placeholder="image url"
          class="form-control"
          value="<%= campsite.img %>"
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          name="campsite[description]"
          id="description"
          placeholder="description"
          class="form-control"
        >
<%= campsite.description %></textarea
        >
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price per night</label>
        <div class="input-group">
          <span class="input-group-text">Â£</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            name="campsite[price]"
            aria-label="Amount (to the nearest pound)"
            value="<%= campsite.price %>"
          />
        </div>
      </div>
      <div class="mb-3 row">
        <a
          class="btn btn-danger mx-3 col"
          href="/campsites/details/<%= campsite.id %> "
          >Cancel</a
        >
        <button class="btn btn-success col align-self-end">Update</button>
      </div>
    </form>

    <a href="/campsites">View all campsites</a>
  </di>
</div>
